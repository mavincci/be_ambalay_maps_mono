root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.gradle]
indent_size = 4

[*.groovy]
indent_size = 4

[*.java]
indent_size = 4

[*.xml]
indent_size = 2

[*.properties]
indent_size = 4

[{Dockerfile*,docker-compose*.yml}]
indent_size = 2

[*.{json,js,ts,jsx,tsx}]
indent_size = 2
